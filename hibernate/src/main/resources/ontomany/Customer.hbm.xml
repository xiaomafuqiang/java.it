<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<!--
    root configure...
-->
<hibernate-mapping>
    <class name="net.htmlonline.controller.htmlonline.domain.multiple.ontomany.Customer" table="cst_customer">
        <id name="cust_id">
            <generator class="native"/>
        </id>
        <property name="cust_name"/>
        <property name="cust_source"/>
        <property name="cust_industry"/>
        <property name="cust_level"/>
        <property name="cust_phone"/>
        <property name="cust_mobile"/>

        <!--
            set: 配置多对一 多的方
                - name: 多的一方属性集合名
                - cascade="save-update" : 几联操作  save(一方)
                key:
                    - column: 多的一样外检名称
                on-to-many:
                    - class: 多的一方全类名
        -->
        <set name="linkMans" cascade="save-update, delete">
            <key column="lkm_cust_id"/>
            <one-to-many class="net.htmlonline.controller.htmlonline.domain.multiple.ontomany.LinkMan"/>
        </set>

    </class>
</hibernate-mapping>