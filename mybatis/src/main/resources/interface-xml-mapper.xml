<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="account">
    <select id="selectAccount" resultType="net.htmlonline.controller.C.domain.Account">
    select * from account where id = #{id}
  </select>
    <select id="selectAccountList" parameterType="String" resultType="net.htmlonline.controller.C.domain.Account">
    select * from account where name like '%${value}%'
  </select>

    <insert id="insertAccount" parameterType="net.htmlonline.controller.C.domain.Account">
        <selectKey keyProperty="id" resultType="Integer" order="AFTER">
            select LAST_INSERT_ID()
        </selectKey>
        insert into account (name, money) values (#{name}, #{money})
    </insert>

    <update id="updateAccount" parameterType="net.htmlonline.controller.C.domain.Account">
        update account set name=#{name}, money=#{money} where id=#{id}
    </update>
    <delete id="deleteAccount" parameterType="Integer">
        delete from account where id=#{id}
    </delete>
</mapper>