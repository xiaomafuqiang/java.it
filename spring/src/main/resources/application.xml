<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
      http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- init -->
    <bean name="userservice" class="net.htmlonline.controller.htmlonline.domain.UserServiceImpl" scope="prototype" init-method="initMethod" destroy-method="destroyed">
        <property name="name" value="小马"/>
    </bean>

    <!-- 构造注入 -->
    <bean id="car" class="net.htmlonline.controller.htmlonline.di.Car">
        <constructor-arg name="name" value="benz"/>
        <constructor-arg name="price" value="90000" type="java.lang.Double"/>
    </bean>
    <!-- setter 注入 -->
    <!--<bean id="car2" class="net.htmlonline.controller.htmlonline.di.Car">-->
        <!--<property name="name" value="BMW"/>-->
        <!--<property name="price" value="67000D"/>-->
    <!--</bean>-->
    <bean id="car2" class="net.htmlonline.controller.htmlonline.di.Car" p:name="奇瑞QQ" p:price="30000"/>

    <!--<bean id="employee" class="net.htmlonline.controller.htmlonline.di.Employee">-->
        <!--<property name="name" value="wo"/>-->
        <!--<property name="car" ref="car"/>-->
    <!--</bean>-->
    <bean id="employee" class="net.htmlonline.controller.htmlonline.di.Employee" p:name="wo" p:car-ref="car2"/>

    <!-- spring expression language -->
    <bean id="car3" class="net.htmlonline.controller.htmlonline.di.Car">
        <property name="name" value="#{'xiaoma'}"/>
        <property name="price" value="#{car.getInt()}" />
    </bean>
    <bean id="employee2" class="net.htmlonline.controller.htmlonline.di.Employee">
        <property name="name" value="pppp"/>
        <property name="car" value="#{car3}"/>
    </bean>

    <!-- jdbc template -->
    <import resource="jdbc.xml"/>
    <!-- tx 编程式事物管理 -->
    <import resource="tx.code.xml"/>
    <!-- 声明式 aop xml 事物管理 -->
    <import resource="tx.aop.xml.xml"/>
    <!-- 声明式 aop config 事物管理 -->
    <import resource="tx.aop.config.xml"/>


</beans>