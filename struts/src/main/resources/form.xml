<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>
    <package name="bName" extends="struts-default" namespace="/">
        <!-- 2.5 版本增加安全方式 允许通配符调用配置-->
        <global-allowed-methods>regex:.*</global-allowed-methods>

        <!-- ********************* -->
        <!-- action 匹配 -->
        <!-- url: product_find 将会调用class find 方法-->
        <action name="requests_*" class="net.htmlonline.controller.htmlonline.actions.servlet.api.Requests" method="{1}"/>

    </package>
</struts>